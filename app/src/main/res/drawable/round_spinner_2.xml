<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:color="#c62828"
                        android:width="1dp"
                        />
                    <corners android:radius="1000dp"/>
                    <padding
                        android:left="12dp"
                        android:top="12dp"
                        android:right="12dp"
                        android:bottom="12dp"
                        />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/ic_spinner_1" android:gravity="center|start" />
            </item>
            <item>
                <bitmap android:src="@drawable/ic_spinner" android:gravity="center|end" />
            </item>
        </layer-list>
    </item>
</selector>