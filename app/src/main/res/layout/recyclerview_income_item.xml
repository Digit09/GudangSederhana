<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp"
    android:id="@+id/rlItem_ii">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Pendapatan Bulanan"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/tvPendatapan_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPendatapan_item"
        android:orientation="horizontal"
        android:id="@+id/llBulan_ii">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:drawablePadding="7dp"
            android:text="Bulan"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_baseline_hourglass_top_24"
            android:id="@+id/tvBulan_item" />
        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:drawablePadding="7dp"
            android:text="Bulan"
            android:textAlignment="textEnd"
            android:textSize="15sp"
            android:id="@+id/tvBulanText_item" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/llBulan_ii"
        android:background="#5e5e5e"
        android:id="@+id/separator1" />

</RelativeLayout>