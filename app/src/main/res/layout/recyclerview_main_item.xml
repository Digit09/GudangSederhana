<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp"
    android:id="@+id/rlItem_mi" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Nama barang"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/tvNamaBarang_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/tvNamaBarang_item"
        android:drawablePadding="7dp"
        android:text="Produsen"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_baseline_business_24"
        android:id="@+id/tvProdusen_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvProdusen_item"
        android:drawablePadding="7dp"
        android:text="Harga"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_baseline_attach_money_24"
        android:id="@+id/tvHarga_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/tvHarga_item"
        android:background="#5e5e5e"
        android:id="@+id/separator1" />

</RelativeLayout>