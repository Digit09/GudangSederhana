<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.MenuSettingsProfile">

    <include
        layout="@layout/toolbar_form_layout"
        android:id="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/added_createDsign1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="5dp"
                        android:id="@+id/llNamaToko_msp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_baseline_business_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama Toko"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/addedNamaToko_msp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="(Nama Toko)"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/addedNamaToko_msp"
                                android:id="@+id/tvNamaToko_msp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="*Nama toko diharapkan terdaftar di OJK"
                                android:textSize="13sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/tvNamaToko_msp"
                                android:id="@+id/addedKetToko" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.09" >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_edit_note_24" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_below="@id/llNamaToko_msp"
                        android:id="@+id/separator1" >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.145" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.7dp"
                            android:layout_weight="0.755"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="#5e5e5e" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator1"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="5dp"
                        android:id="@+id/llNamaPemilik_msp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_baseline_person_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama Pemilik"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/addedNamaPemilik_msp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="(Nama Pemilik)"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/addedNamaPemilik_msp"
                                android:id="@+id/tvNamaPemilik_msp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.09" >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_edit_note_24" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_below="@id/llNamaPemilik_msp"
                        android:id="@+id/separator2" >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.145" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.7dp"
                            android:layout_weight="0.755"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="#5e5e5e" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator2"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="5dp"
                        android:id="@+id/llAlamat_msp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_baseline_location_on_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alamat Toko"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/addedAlamat_msp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="(Alamat Toko)"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/addedAlamat_msp"
                                android:id="@+id/tvAlamat_msp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.09" >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_edit_note_24" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_below="@id/llAlamat_msp"
                        android:id="@+id/separator3" >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.145" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.7dp"
                            android:layout_weight="0.755"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="#5e5e5e" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/separator3"
                        android:orientation="horizontal"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="5dp"
                        android:id="@+id/llNoTelp_msp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_weight="0.17"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_baseline_call_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83" >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nomor Telepon Pemilik"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/addedNoTelp_msp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:text="(Nomor Telepon)"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/addedNoTelp_msp"
                                android:id="@+id/tvNoTelp_msp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.09" >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_edit_note_24" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>