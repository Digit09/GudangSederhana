<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuSettings">

    <include
        layout="@layout/toolbar_form_layout_submenu"
        android:id="@+id/toolbar_submenu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_submenu" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/rlProfil" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Nama Toko)"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tvToko" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Nama Pemilik)"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/tvToko"
                    android:id="@+id/tvPemilik" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#5e5e5e"
                android:layout_marginVertical="5dp"
                android:layout_below="@id/rlProfil"
                android:id="@+id/separator1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="from"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_below="@id/separator1"
                android:id="@+id/tvAdded_from" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D i g i t   |   B a n u a D e v"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/tvAdded_from" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>