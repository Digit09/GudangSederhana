<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.MenuSettingsHelp"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_form_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/added_createDsign1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/separatorPtjk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="20dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.17"
                            android:src="@drawable/ic_baseline_help_24" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83"
                            android:padding="10px">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Petunjuk Penggunaan"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_below="@id/separatorPtjk"
                        android:id="@+id/separator1" >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.16" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.7dp"
                            android:layout_weight="0.755"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="#5e5e5e" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/separatorBrsrn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator1"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="20dp">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.17"
                            android:src="@drawable/ic_baseline_contact_phone_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83"
                            android:padding="10px">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Beri Saran"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:layout_below="@id/separatorBrsrn"
                        android:id="@+id/separator2" >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.16" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0.7dp"
                            android:layout_weight="0.755"
                            android:layout_marginVertical="5dp"
                            android:layout_marginEnd="10dp"
                            android:background="#5e5e5e" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator2"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="20dp"
                        android:id="@+id/llInfoAplikasi_sh">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.17"
                            android:src="@drawable/ic_baseline_info_24" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.83">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Info Aplikasi"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>