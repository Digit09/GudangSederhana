<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:project="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="-10dp"
        project:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Digit-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="60dp"
                android:drawableStart="@drawable/ic_baseline_share_24"
                android:textColor="@color/white"
                android:text="Teks Whatsapp"
                android:textAllCaps="false"
                android:backgroundTint="#c62828"
                android:id="@+id/btShare" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="60dp"
                android:drawableStart="@drawable/ic_baseline_file_download_24"
                android:textColor="@color/white"
                android:text="Dokumen (*.docx)"
                android:textAllCaps="false"
                android:backgroundTint="#c62828"
                android:id="@+id/btSaveDocx" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>